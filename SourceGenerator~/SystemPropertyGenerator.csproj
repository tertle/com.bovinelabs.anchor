<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <RootNamespace>BovineLabs.SourceGenerator</RootNamespace>
        <LangVersion>9</LangVersion>
        <PackageId>SystemPropertyGenerator</PackageId>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
        <OutDir>..\Libraries\</OutDir>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
        <OutDir>..\Libraries\</OutDir>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.1.0" />
    </ItemGroup>

    <ItemGroup>
      <Reference Include="CodeGenHelpers">
        <HintPath>..\..\com.bovinelabs.core\Libraries\CodeGenHelpers\CodeGenHelpers.dll</HintPath>
        <Private>false</Private>
      </Reference>
    </ItemGroup>

</Project>
